{
  "manifest_version": 3,
  "name": "AI Media Generator",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "contextMenus"],
  "action": {
    "default_title": "AI Media Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.html", "injected.js", "style.css", "libs/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
